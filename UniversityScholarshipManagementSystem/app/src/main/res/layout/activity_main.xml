<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivity"
    android:background="@drawable/uni">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AB363535" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="378dp"
        android:layout_height="135dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:text="Welcome to Scholarship Management System"
        android:textColor="#021F75"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/btn_gradient"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#0DF3BD"
        android:textSize="24sp"
        app:backgroundTintMode="src_in"
        app:icon="@drawable/btn_gradient" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="300dp"
        android:text="Register"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#03A9F4"
        android:textColorHighlight="#107DD3"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="400dp"
        android:text="Skip"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F5F5FA"
        android:textSize="30sp"
        android:textStyle="bold" />






</RelativeLayout>